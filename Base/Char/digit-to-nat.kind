use Base/Char/ as C/
use Base/Nat/ as N/
use Base/U32/ as U32/
use Base/Maybe/ as M/

// Converts a digit character to its corresponding natural number.
// 1st: The input character.
// = Some n if c is a digit, where n is the corresponding natural number, None otherwise.
C/digit-to-nat
: ∀(c: C/Char)
  (M/Maybe N/Nat)
= λc
  let n = (- c 48)
  (U32/if (M/Maybe N/Nat)
    (& (<= 0 n) (<= n 9))
    #Some{(U32/to-nat n)}
    #None{}
  )